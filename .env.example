# Database Configuration
# Get this from your PostgreSQL provider (e.g., Render, Supabase, Neon)
DATABASE_URL=postgresql://username:password@host:5432/database

# AWS S3 Configuration
# Create an IAM user with S3 access and get these from AWS Console
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your_bucket_name

# OpenAI Configuration
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# SendGrid Configuration (for email authentication)
# Get this from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# For production, set NEXTAUTH_URL to your production domain:
# NEXTAUTH_URL=https://yourdomain.com

# Jina AI Configuration (optional, for website scanning features)
# Get your free API key at https://jina.ai/reader/
# Includes 10M free tokens for non-commercial use
JINA_API_KEY=jina_your_jina_api_key_here

# DataForSEO Configuration (for Just-in-Time Keyword Research)
# Get your credentials from https://dataforseo.com/
# Used for content brief SEO keyword research
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password
